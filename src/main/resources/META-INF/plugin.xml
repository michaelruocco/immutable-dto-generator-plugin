<idea-plugin>
    <id>com.github.michaelruocco</id>
    <name>immutable-dto-generator-plugin</name>
    <version>0.0.1</version>
    <vendor email="michael.ruocco@hotmail.com" url="https://github.com/michaelruocco">Michael Ruocco</vendor>
    <description><![CDATA[ Immutable Dto Generator Plugin.<br> ]]></description>
    <change-notes><![CDATA[ Release 0.0.1: Initial release.<br> ]]></change-notes>
    <idea-version since-build="162"/>
    <extensions defaultExtensionNs="com.intellij"></extensions>
    <actions>
        <action id="immutable-dto-generator-plugin.generate-dto" class="uk.co.mruoc.dto.plugin.GenerateDtoAction" text="Generate DTO"
                description="action to generate an immutable dto class using builder pattern with unit test">
            <add-to-group group-id="CodeMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>